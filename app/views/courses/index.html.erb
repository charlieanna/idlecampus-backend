<div class="container mt-4">
  <div class="row mb-4">
    <div class="col-md-12">
      <h1 class="mb-3">
        <i class="fas fa-book"></i> Available Courses
      </h1>
      <p class="lead text-muted">
        Master Docker and Kubernetes through structured learning paths
      </p>
    </div>
  </div>

  <!-- Filters -->
  <div class="row mb-4">
    <div class="col-md-12">
      <div class="btn-group" role="group">
        <%= link_to courses_path, class: "btn btn-outline-primary #{'active' unless params[:difficulty]}" do %>
          All Courses
        <% end %>
        <%= link_to courses_path(difficulty: 'beginner'), class: "btn btn-outline-success #{'active' if params[:difficulty] == 'beginner'}" do %>
          Beginner
        <% end %>
        <%= link_to courses_path(difficulty: 'intermediate'), class: "btn btn-outline-warning #{'active' if params[:difficulty] == 'intermediate'}" do %>
          Intermediate
        <% end %>
        <%= link_to courses_path(difficulty: 'advanced'), class: "btn btn-outline-danger #{'active' if params[:difficulty] == 'advanced'}" do %>
          Advanced
        <% end %>
      </div>
      
      <div class="btn-group ms-3" role="group">
        <%= link_to courses_path(certification: 'dca'), class: "btn btn-outline-info #{'active' if params[:certification] == 'dca'}" do %>
          <i class="fas fa-certificate"></i> DCA Track
        <% end %>
        <%= link_to courses_path(certification: 'cka'), class: "btn btn-outline-info #{'active' if params[:certification] == 'cka'}" do %>
          <i class="fas fa-certificate"></i> CKA Track
        <% end %>
        <%= link_to courses_path(certification: 'ckad'), class: "btn btn-outline-info #{'active' if params[:certification] == 'ckad'}" do %>
          <i class="fas fa-certificate"></i> CKAD Track
        <% end %>
        <%= link_to courses_path(certification: 'cks'), class: "btn btn-outline-info #{'active' if params[:certification] == 'cks'}" do %>
          <i class="fas fa-certificate"></i> CKS Track
        <% end %>
      </div>
    </div>
  </div>

  <!-- Course Cards -->
  <div class="row">
    <% @courses.each do |course| %>
      <div class="col-md-6 mb-4">
        <div class="card h-100 shadow-sm course-card">
          <div class="card-header bg-white">
            <div class="d-flex justify-content-between align-items-center">
              <h4 class="mb-0"><%= course.title %></h4>
              <span class="badge bg-<%= course.difficulty_level == 'beginner' ? 'success' : (course.difficulty_level == 'intermediate' ? 'warning' : 'danger') %>">
                <%= course.difficulty_level.upcase %>
              </span>
            </div>
          </div>
          <div class="card-body">
            <p class="text-muted mb-3"><%= course.description %></p>
            
            <div class="row mb-3">
              <div class="col-6">
                <small class="text-muted">
                  <i class="fas fa-clock"></i> <%= course.estimated_hours %> hours
                </small>
              </div>
              <div class="col-6">
                <small class="text-muted">
                  <i class="fas fa-layer-group"></i> <%= course.course_modules.count %> modules
                </small>
              </div>
            </div>
            
            <% if course.certification_track.present? %>
              <div class="mb-3">
                <span class="badge bg-info">
                  <i class="fas fa-certificate"></i> <%= course.certification_track.upcase %> Aligned
                </span>
              </div>
            <% end %>
            
            <% enrollment = course.enrollment_for(current_user) %>
            <% if enrollment %>
              <div class="mb-3">
                <div class="progress" style="height: 25px;">
                  <div class="progress-bar bg-success" role="progressbar" 
                       style="width: <%= enrollment.completion_percentage %>%">
                    <%= enrollment.completion_percentage %>% Complete
                  </div>
                </div>
              </div>
              <%= link_to continue_course_path(course), class: "btn btn-success btn-block" do %>
                <i class="fas fa-play"></i> Continue Learning
              <% end %>
            <% else %>
              <%= link_to course_path(course), class: "btn btn-primary btn-block" do %>
                <i class="fas fa-arrow-right"></i> View Course Details
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  
  <% if @courses.empty? %>
    <div class="alert alert-info text-center">
      <i class="fas fa-info-circle"></i> No courses found matching your criteria.
    </div>
  <% end %>
</div>

<style>
  .course-card {
    transition: transform 0.2s, box-shadow 0.2s;
  }
  
  .course-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.15) !important;
  }
  
  .btn-block {
    display: block;
    width: 100%;
  }
</style>
