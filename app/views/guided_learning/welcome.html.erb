<% content_for :title, "Welcome to Interactive Learning" %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg">
        <div class="card-body p-5">
          <div class="text-center mb-4">
            <i class="fas fa-graduation-cap fa-4x text-primary mb-3"></i>
            <h1 class="display-4">Welcome to CodeSprout!</h1>
            <p class="lead text-muted">Your journey to Docker mastery starts here</p>
          </div>
          
          <hr class="my-4">
          
          <div class="mb-4">
            <h3>How It Works</h3>
            <div class="row mt-3">
              <div class="col-md-6 mb-3">
                <div class="d-flex">
                  <div class="mr-3">
                    <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                      1
                    </div>
                  </div>
                  <div>
                    <h5>Guided Learning Path</h5>
                    <p class="text-muted">Follow a structured curriculum that builds your skills step-by-step</p>
                  </div>
                </div>
              </div>
              
              <div class="col-md-6 mb-3">
                <div class="d-flex">
                  <div class="mr-3">
                    <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                      2
                    </div>
                  </div>
                  <div>
                    <h5>Interactive Exercises</h5>
                    <p class="text-muted">Practice real Docker commands with immediate feedback</p>
                  </div>
                </div>
              </div>
              
              <div class="col-md-6 mb-3">
                <div class="d-flex">
                  <div class="mr-3">
                    <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                      3
                    </div>
                  </div>
                  <div>
                    <h5>Smart Reviews</h5>
                    <p class="text-muted">Our AI tracks your progress and inserts reviews when you need them</p>
                  </div>
                </div>
              </div>
              
              <div class="col-md-6 mb-3">
                <div class="d-flex">
                  <div class="mr-3">
                    <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                      4
                    </div>
                  </div>
                  <div>
                    <h5>Live Labs</h5>
                    <p class="text-muted">Run real Docker containers in a safe sandbox environment</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <div class="alert alert-info">
            <h5><i class="fas fa-info-circle mr-2"></i>Getting Started</h5>
            <p class="mb-0">We'll start with the basics and gradually increase complexity. Each unit takes about 10-15 minutes to complete.</p>
          </div>
          
          <div class="text-center mt-4">
            <% first_unit = InteractiveLearningUnit.published.ordered.first %>
            <% if first_unit %>
              <%= link_to interactive_learning_index_path, class: "btn btn-primary btn-lg px-5" do %>
                <i class="fas fa-rocket mr-2"></i>Start Learning
              <% end %>
            <% else %>
              <p class="text-danger">No learning units are available yet. Please contact an administrator.</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>