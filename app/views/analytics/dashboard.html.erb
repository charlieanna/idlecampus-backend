<div class="container py-4">
  <h2 class="mb-4"><i class="fas fa-chart-line"></i> Learning Analytics</h2>
  
  <div class="row">
    <!-- Overall Stats -->
    <div class="col-md-3">
      <div class="card shadow-sm mb-4">
        <div class="card-body text-center">
          <h3 class="text-primary"><%= @learning_stats[:questions_answered] %></h3>
          <small class="text-muted">Questions Answered</small>
        </div>
      </div>
    </div>
    
    <div class="col-md-3">
      <div class="card shadow-sm mb-4">
        <div class="card-body text-center">
          <h3 class="text-success"><%= @learning_stats[:average_accuracy] %>%</h3>
          <small class="text-muted">Avg Accuracy</small>
        </div>
      </div>
    </div>
    
    <div class="col-md-3">
      <div class="card shadow-sm mb-4">
        <div class="card-body text-center">
          <h3 class="text-info"><%= @learning_stats[:labs_completed] %></h3>
          <small class="text-muted">Labs Completed</small>
        </div>
      </div>
    </div>
    
    <div class="col-md-3">
      <div class="card shadow-sm mb-4">
        <div class="card-body text-center">
          <h3 class="text-warning"><%= @learning_stats[:current_streak] %></h3>
          <small class="text-muted">Day Streak</small>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row">
    <!-- Skill Radar Chart -->
    <div class="col-lg-6">
      <div class="card shadow-sm mb-4">
        <div class="card-header">
          <h5 class="mb-0"><i class="fas fa-bullseye"></i> Skill Profile</h5>
        </div>
        <div class="card-body">
          <canvas id="skillRadarChart" height="300"></canvas>
        </div>
      </div>
    </div>
    
    <!-- Progress Timeline -->
    <div class="col-lg-6">
      <div class="card shadow-sm mb-4">
        <div class="card-header">
          <h5 class="mb-0"><i class="fas fa-chart-area"></i> Progress Over Time</h5>
        </div>
        <div class="card-body">
          <canvas id="progressChart" height="300"></canvas>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Exam Readiness Section -->
  <% if @exam_readiness.any? %>
    <div class="row mb-4">
      <div class="col-12">
        <div class="card shadow-sm">
          <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-certificate"></i> Certification Readiness</h5>
          </div>
          <div class="card-body">
            <div class="row">
              <% @exam_readiness.each do |cert, data| %>
                <div class="col-md-4 mb-3">
                  <div class="cert-readiness-card">
                    <h6 class="text-uppercase mb-2"><%= cert %></h6>
                    <div class="readiness-meter mb-2">
                      <div class="progress" style="height: 25px;">
                        <div class="progress-bar bg-<%= data[:status] == 'ready' ? 'success' : data[:status] == 'almost_ready' ? 'warning' : 'danger' %>" 
                             role="progressbar" 
                             style="width: <%= data[:score] %>%"
                             aria-valuenow="<%= data[:score] %>" 
                             aria-valuemin="0" 
                             aria-valuemax="100">
                          <%= data[:score] %>%
                        </div>
                      </div>
                    </div>
                    <p class="small mb-2 text-muted"><%= data[:recommendation] %></p>
                    <div class="d-flex gap-2">
                      <%= link_to "Practice Exam", start_exam_simulations_path(cert), 
                          class: "btn btn-sm btn-outline-primary flex-fill" %>
                      <% if @certification_progress[cert] %>
                        <%= link_to "Continue Course", 
                            continue_course_path(@certification_progress[cert][:course_name]), 
                            class: "btn btn-sm btn-primary flex-fill" %>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  
  <div class="row">
    <!-- Weaknesses -->
    <div class="col-lg-6">
      <div class="card shadow-sm mb-4">
        <div class="card-header">
          <h5 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Areas to Improve</h5>
        </div>
        <div class="card-body">
          <% if @weaknesses.any? %>
            <div class="list-group">
              <% @weaknesses.each do |weakness| %>
                <div class="list-group-item">
                  <div class="d-flex justify-content-between align-items-center">
                    <div>
                      <h6 class="mb-1"><%= weakness[:topic].titleize %></h6>
                      <small class="text-muted">
                        <%= weakness[:error_count] %> errors in <%= weakness[:attempts] %> attempts
                        (<%= (weakness[:accuracy] * 100).round(1) %>% accuracy)
                      </small>
                    </div>
                    <div>
                      <span class="badge badge-<%= weakness[:severity] > 0.7 ? 'danger' : 'warning' %>">
                        <%= (weakness[:severity] * 100).round(0) %>% weak
                      </span>
                    </div>
                  </div>
                  <div class="mt-2">
                    <%= link_to "Practice #{weakness[:topic]}", 
                        start_adaptive_practice_path(skill_dimension: weakness[:dimension]),
                        class: "btn btn-sm btn-outline-primary" %>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-muted mb-0">No weaknesses detected yet. Keep practicing!</p>
          <% end %>
        </div>
      </div>
    </div>
    
    <!-- Remediation Stats -->
    <div class="col-lg-6">
      <div class="card shadow-sm mb-4">
        <div class="card-header">
          <h5 class="mb-0"><i class="fas fa-graduation-cap"></i> Remediation Progress</h5>
        </div>
        <div class="card-body">
          <% if @remediation_stats[:lessons_reviewed] > 0 %>
            <div class="row mb-3">
              <div class="col-4 text-center">
                <h4 class="mb-0 text-info"><%= @remediation_stats[:lessons_reviewed] %></h4>
                <small class="text-muted">Lessons Reviewed</small>
              </div>
              <div class="col-4 text-center">
                <h4 class="mb-0 text-success"><%= @remediation_stats[:improvement_rate] %>%</h4>
                <small class="text-muted">Improvement Rate</small>
              </div>
              <div class="col-4 text-center">
                <h4 class="mb-0 text-primary"><%= @remediation_stats[:unique_lessons] %></h4>
                <small class="text-muted">Unique Topics</small>
              </div>
            </div>
            
            <% if @remediation_stats[:most_reviewed_topics].any? %>
              <h6 class="mt-3 mb-2">Most Reviewed Topics</h6>
              <div class="topic-tags mb-3">
                <% @remediation_stats[:most_reviewed_topics].each do |topic, count| %>
                  <span class="badge badge-info mr-2 mb-2">
                    <%= topic.titleize %> <span class="badge badge-light"><%= count %></span>
                  </span>
                <% end %>
              </div>
            <% end %>
            
            <% if @remediation_stats[:recent_reviews].any? %>
              <h6 class="mt-3 mb-2">Recent Reviews</h6>
              <div class="list-group">
                <% @remediation_stats[:recent_reviews].take(3).each do |review| %>
                  <div class="list-group-item p-2">
                    <div class="d-flex justify-content-between">
                      <small class="font-weight-bold"><%= review[:lesson_title] %></small>
                      <% if review[:improved] %>
                        <span class="badge badge-success">Improved âœ“</span>
                      <% end %>
                    </div>
                    <small class="text-muted"><%= time_ago_in_words(review[:reviewed_at]) %> ago</small>
                  </div>
                <% end %>
              </div>
            <% end %>
          <% else %>
            <p class="text-muted mb-0">
              <i class="fas fa-info-circle"></i> 
              When you review lessons after missing questions, your progress will appear here.
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row">
    <!-- Recommendations -->
    <div class="col-lg-12">
      <div class="card shadow-sm mb-4">
        <div class="card-header">
          <h5 class="mb-0"><i class="fas fa-lightbulb"></i> Recommended Next Steps</h5>
        </div>
        <div class="card-body">
          <% if @recommendations.any? %>
            <div class="list-group">
              <% @recommendations.each do |rec| %>
                <div class="list-group-item">
                  <div class="d-flex align-items-center">
                    <div class="mr-3">
                      <i class="fas fa-<%= rec[:type] == 'lesson' ? 'book' : rec[:type] == 'lab' ? 'flask' : 'redo' %> text-primary"></i>
                    </div>
                    <div class="flex-grow-1">
                      <h6 class="mb-1"><%= rec[:item].try(:title) || 'Review Item' %></h6>
                      <small class="text-muted"><%= rec[:reason] %></small>
                    </div>
                    <div>
                      <% if rec[:type] == 'lesson' %>
                        <%= link_to "Start", lesson_path(rec[:item]), class: "btn btn-sm btn-primary" %>
                      <% elsif rec[:type] == 'lab' %>
                        <%= link_to "Start", hands_on_lab_path(rec[:item]), class: "btn btn-sm btn-success" %>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-muted mb-0">Complete some quizzes to get personalized recommendations.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Recent Activity -->
  <div class="row">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-header">
          <h5 class="mb-0"><i class="fas fa-history"></i> Recent Activity</h5>
        </div>
        <div class="card-body">
          <% if @recent_activity.any? %>
            <div class="table-responsive">
              <table class="table table-sm table-hover">
                <thead>
                  <tr>
                    <th>Type</th>
                    <th>Activity</th>
                    <th>Performance</th>
                    <th>Time</th>
                  </tr>
                </thead>
                <tbody>
                  <% @recent_activity.each do |activity| %>
                    <tr>
                      <td><span class="badge badge-secondary"><%= activity[:category] %></span></td>
                      <td><%= activity[:description] %></td>
                      <td>
                        <% if activity[:performance] %>
                          <span class="badge badge-<%= activity[:performance] > 0.7 ? 'success' : activity[:performance] > 0.4 ? 'warning' : 'danger' %>">
                            <%= (activity[:performance] * 100).round(0) %>%
                          </span>
                        <% end %>
                      </td>
                      <td><small class="text-muted"><%= time_ago_in_words(activity[:time]) %> ago</small></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <p class="text-muted mb-0">No recent activity. Start learning!</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.js"></script>
<script>
// Skill Radar Chart
fetch('<%= skill_radar_data_analytics_path %>')
  .then(response => response.json())
  .then(data => {
    const ctx = document.getElementById('skillRadarChart');
    new Chart(ctx, {
      type: 'radar',
      data: data,
      options: {
        responsive: true,
        maintainAspectRatio: false,
        scales: {
          r: {
            beginAtZero: true,
            max: 100
          }
        }
      }
    });
  });

// Progress Timeline Chart
fetch('<%= progress_timeline_data_analytics_path %>')
  .then(response => response.json())
  .then(data => {
    const ctx = document.getElementById('progressChart');
    new Chart(ctx, {
      type: 'line',
      data: data,
      options: {
        responsive: true,
        maintainAspectRatio: false,
        scales: {
          y: {
            beginAtZero: true,
            max: 100
          }
        }
      }
    });
  });
</script>

<style>
  .cert-readiness-card {
    padding: 15px;
    border: 1px solid #e0e0e0;
    border-radius: 10px;
    height: 100%;
    background: #f8f9fa;
    transition: all 0.3s ease;
  }
  
  .cert-readiness-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  }
  
  .readiness-meter .progress {
    background-color: #e9ecef;
  }
  
  .d-flex.gap-2 {
    gap: 0.5rem;
  }
</style>

