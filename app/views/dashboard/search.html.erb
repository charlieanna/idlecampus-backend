<div class="container">
  <div class="row">
    <div class="col-sm-3">  
    </div>
    <div class="col-sm-7">
      <% sorted_posts = @posts.sort_by { |post| -post['in_degree'] } %>
      <% sorted_posts.each do |post| %>
        <div class="well well-large">
          <dl>
            
            <%= link_to post['title'], "/post?post_id=#{post['id']}&service=#{post[:service]}", target: "_blank" %>
            <% if post[:service].to_s == "stackoverflow" %>
              <div><%= link_to "Learn More", "https://#{post[:service]}.com/questions/#{post['id']}", target: "_blank" %></div>
            <% else %>
              <div><%= link_to "Learn More", "https://#{post[:service]}.stackexchange.com/questions/#{post['id']}", target: "_blank" %></div>
            <% end %>
            <div>
              <% post['tags'].each do |tag| %>
                <%= link_to tag, "/search/#{tag}" %>,
              <% end %>
            </div>
            <dt>service: <%= post[:service] %></dt>
            <dt>score: <%= post['score'] %></dt>
            <dt>inlinks: <%= post['in_degree'] %></dt>
            <dt>outlinks: <%= post['out_degree'] %></dt>
          </dl>
        </div>
      <% end %>
    </div>
    <div class="col-sm-2"></div>
  </div>
</div>
