<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <!-- Progress Bar -->
      <div class="mb-4">
        <div class="d-flex justify-content-between align-items-center mb-2">
          <h5 class="mb-0">
            <i class="fas fa-clipboard-check"></i> Skill Assessment
          </h5>
          <span class="text-muted">
            Question <%= @current_index %> of <%= @total_questions %>
          </span>
        </div>
        <div class="progress" style="height: 25px;">
          <div class="progress-bar progress-bar-striped progress-bar-animated" 
               role="progressbar" 
               style="width: <%= @progress %>%"
               aria-valuenow="<%= @progress %>" 
               aria-valuemin="0" 
               aria-valuemax="100">
            <%= @progress %>%
          </div>
        </div>
      </div>
      
      <!-- Question Card -->
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Question <%= @current_index %></h5>
            <span class="badge badge-light text-primary">
              <%= @next_question.skill_dimension&.humanize || 'General' %>
            </span>
          </div>
        </div>
        
        <div class="card-body">
          <%= form_with url: answer_diagnostic_quiz_path, local: true do |f| %>
            <%= hidden_field_tag :question_id, @next_question.id %>
            
            <p class="lead mb-4"><%= @next_question.question_text %></p>
            
            <% if @next_question.question_type == 'mcq' && @next_question.options.present? %>
              <div class="answer-options">
                <% @next_question.options.each_with_index do |option, index| %>
                  <div class="form-check mb-3 p-3 border rounded hover-highlight">
                    <%= radio_button_tag :answer, option['text'], false, 
                        class: 'form-check-input', 
                        id: "option_#{index}",
                        required: true %>
                    <%= label_tag "option_#{index}", option['text'], 
                        class: 'form-check-label w-100',
                        style: 'cursor: pointer;' %>
                  </div>
                <% end %>
              </div>
            <% elsif @next_question.question_type == 'true_false' %>
              <div class="row">
                <div class="col-6">
                  <div class="form-check p-3 border rounded hover-highlight">
                    <%= radio_button_tag :answer, 'true', false, 
                        class: 'form-check-input', 
                        id: "option_true",
                        required: true %>
                    <%= label_tag "option_true", 
                        class: 'form-check-label w-100',
                        style: 'cursor: pointer;' do %>
                      <i class="fas fa-check text-success"></i> True
                    <% end %>
                  </div>
                </div>
                <div class="col-6">
                  <div class="form-check p-3 border rounded hover-highlight">
                    <%= radio_button_tag :answer, 'false', false, 
                        class: 'form-check-input', 
                        id: "option_false",
                        required: true %>
                    <%= label_tag "option_false", 
                        class: 'form-check-label w-100',
                        style: 'cursor: pointer;' do %>
                      <i class="fas fa-times text-danger"></i> False
                    <% end %>
                  </div>
                </div>
              </div>
            <% else %>
              <div class="form-group">
                <%= text_field_tag :answer, '', 
                    class: 'form-control form-control-lg', 
                    placeholder: 'Enter your answer...',
                    required: true,
                    autocomplete: 'off' %>
              </div>
            <% end %>
            
            <div class="text-center mt-4">
              <%= f.submit "Next Question", 
                  class: "btn btn-primary btn-lg",
                  data: { disable_with: "Submitting..." } %>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- Encouragement -->
      <div class="text-center mt-3">
        <p class="text-muted">
          <i class="fas fa-info-circle"></i>
          Take your time - this helps us create the perfect learning path for you!
        </p>
      </div>
    </div>
  </div>
</div>

<style>
  .hover-highlight:hover {
    background-color: #f8f9fa;
    cursor: pointer;
    transform: scale(1.02);
    transition: all 0.2s ease;
  }
  
  .form-check-input:checked + .form-check-label {
    font-weight: bold;
    color: #007bff;
  }
</style>

<script>
  // Make entire option clickable
  document.querySelectorAll('.hover-highlight').forEach(function(element) {
    element.addEventListener('click', function() {
      const radio = this.querySelector('input[type="radio"]');
      if (radio) {
        radio.checked = true;
      }
    });
  });
</script>
