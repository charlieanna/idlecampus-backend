<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <!-- Welcome Card -->
      <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center py-4">
          <h2 class="mb-0">
            <i class="fas fa-clipboard-check"></i> Skill Assessment Quiz
          </h2>
        </div>
        
        <div class="card-body p-5">
          <div class="text-center mb-4">
            <i class="fas fa-graduation-cap fa-4x text-primary mb-3"></i>
            <h3>Welcome to Your Learning Journey!</h3>
            <p class="lead text-muted">
              Let's find out where you are in your Docker and Kubernetes journey
            </p>
          </div>
          
          <div class="row mb-4">
            <div class="col-md-4 text-center">
              <div class="mb-3">
                <i class="fas fa-clock fa-2x text-info"></i>
              </div>
              <h5>10-15 Minutes</h5>
              <p class="text-muted small">Quick assessment of your current knowledge</p>
            </div>
            <div class="col-md-4 text-center">
              <div class="mb-3">
                <i class="fas fa-question-circle fa-2x text-warning"></i>
              </div>
              <h5><%= @total_questions %> Questions</h5>
              <p class="text-muted small">Covering Docker & Kubernetes fundamentals</p>
            </div>
            <div class="col-md-4 text-center">
              <div class="mb-3">
                <i class="fas fa-route fa-2x text-success"></i>
              </div>
              <h5>Personalized Path</h5>
              <p class="text-muted small">Get recommendations based on your level</p>
            </div>
          </div>
          
          <div class="alert alert-info">
            <h5><i class="fas fa-info-circle"></i> What to Expect</h5>
            <ul class="mb-0">
              <li>Questions range from basic concepts to intermediate topics</li>
              <li>No time pressure - take your time to think</li>
              <li>Wrong answers help us understand where to focus</li>
              <li>You'll get a personalized learning plan at the end</li>
            </ul>
          </div>
          
          <%= form_with url: answer_diagnostic_quiz_path, local: true do |f| %>
            <% if @questions.any? %>
              <% first_question = @questions.first %>
              <%= hidden_field_tag :question_id, first_question.id %>
              
              <!-- First Question -->
              <div class="card bg-light mt-4">
                <div class="card-header">
                  <div class="d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">Question 1 of <%= @total_questions %></h6>
                    <span class="badge badge-secondary"><%= first_question.skill_dimension&.humanize || 'General' %></span>
                  </div>
                </div>
                <div class="card-body">
                  <p class="lead"><%= first_question.question_text %></p>
                  
                  <% if first_question.question_type == 'mcq' && first_question.options.present? %>
                    <div class="mt-3">
                      <% first_question.options.each_with_index do |option, index| %>
                        <div class="form-check mb-2">
                          <%= radio_button_tag :answer, option['text'], false, 
                              class: 'form-check-input', 
                              id: "option_#{index}" %>
                          <%= label_tag "option_#{index}", option['text'], 
                              class: 'form-check-label' %>
                        </div>
                      <% end %>
                    </div>
                  <% else %>
                    <%= text_field_tag :answer, '', 
                        class: 'form-control', 
                        placeholder: 'Enter your answer...' %>
                  <% end %>
                </div>
              </div>
              
              <div class="text-center mt-4">
                <%= f.submit "Begin Assessment", class: "btn btn-primary btn-lg" %>
                <%= link_to "Skip for Now", dashboard_path, class: "btn btn-outline-secondary btn-lg ml-2" %>
              </div>
            <% else %>
              <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle"></i>
                No diagnostic questions available. Please contact support.
              </div>
              <%= link_to "Go to Dashboard", dashboard_path, class: "btn btn-primary" %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .card {
    border-radius: 15px;
  }
  
  .card-header {
    border-radius: 15px 15px 0 0 !important;
  }
</style>
