<div class="testing-content">
  <div class="content-header">
    <div class="mode-badge testing-badge">
      <span class="badge-icon">ðŸ§ª</span>
      <span class="badge-text">Practice Mode</span>
    </div>
  </div>

  <div class="challenge-box">
    <div class="challenge-icon">ðŸ’ª</div>
    <div class="challenge-text">
      <h2 class="challenge-title">Your Challenge</h2>
  <% if content[:type] == 'command_review' %>
        <p class="challenge-desc"><%= content[:content][:title] %></p>
  <% elsif content[:type] == 'quick_review' || content[:type] == 'scenario_review' %>
        <p class="challenge-desc"><%= content[:content][:scenario_narrative] || content[:content][:title] %></p>
  <% else %>
        <p class="challenge-desc"><%= content[:content][:description] || content[:content][:task] || "Type the correct Docker command" %></p>
  <% end %>
    </div>
  </div>
  
  <div class="input-section">
    <div class="input-wrapper">
      <span class="input-icon">$</span>
  <input type="text"
         class="response-input"
         id="userResponse"
             placeholder="<% if content[:type] == 'quick_review' || content[:type] == 'scenario_review' %>Type the command you learned...<% else %>docker ...<% end %>"
         autocomplete="off"
         onpaste="return false"
         ondrop="return false"
         >
      <div class="input-glow"></div>
    </div>
    
    <div class="input-hint">
      Press <kbd>Enter</kbd> to submit Â· Type the command (copy/paste disabled)
    </div>
    
    <div class="paste-disabled-message" id="pasteMessage" style="display: none; color: #ff6b6b; font-size: 0.85rem; margin-top: 8px;">
      âš  Paste disabled - type the command to learn!
    </div>
  </div>
  
  <div id="feedbackArea" class="feedback-container"></div>
  
  <div class="actions-row">
    <button class="submit-button" id="submitBtn" data-action="test_answer">
      <span class="btn-icon">â†’</span>
      Submit Answer
    </button>
    
    <% if defined?(session) && session[:hints_used] && session[:hints_used] < 3 %>
      <button class="hint-button" id="hintBtn" data-action="request_hint">
        <span class="hint-icon">ðŸ’¡</span>
        Get a Hint
        <span class="hint-count">(<%= 3 - session[:hints_used] %> left)</span>
      </button>
    <% else %>
      <button class="hint-button" id="hintBtn" data-action="request_hint">
        <span class="hint-icon">ðŸ’¡</span>
        Get a Hint
      </button>
    <% end %>
  </div>
  
  <div id="hintArea" class="hint-container"></div>
</div>

