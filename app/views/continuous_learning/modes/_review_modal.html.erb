<div class="review-overlay" id="reviewOverlay">
  <div class="review-modal">
    <!-- Header -->
    <div class="review-header">
      <div class="review-badge">
        <span class="badge-icon">üéØ</span>
        <span class="badge-text">Quick Review</span>
      </div>
      <button class="skip-button" id="skipReviewBtn" title="Skip for now">
        Skip
      </button>
    </div>

    <!-- Progress indicator if multiple reviews -->
    <% if content[:metadata] && content[:metadata][:review_count] %>
    <div class="review-progress">
      Review <%= content[:metadata][:current_review] || 1 %> of <%= content[:metadata][:review_count] %>
    </div>
    <% end %>

    <!-- Context message -->
    <div class="review-context">
      <div class="context-icon">üí°</div>
      <div class="context-message">
        <strong>Why this review?</strong>
        <% if content[:metadata] && content[:metadata][:mastery_score] %>
          <% if content[:metadata][:mastery_score] >= 100 %>
            You haven't practiced this in a while. Let's keep it fresh!
          <% elsif content[:metadata][:mastery_score] >= 80 %>
            Your mastery is at <%= content[:metadata][:mastery_score] %>%. Almost there!
          <% else %>
            Your mastery is at <%= content[:metadata][:mastery_score] %>%. Let's boost it back to 100%!
          <% end %>
        <% else %>
          Time to reinforce what you've learned!
        <% end %>
      </div>
    </div>

    <!-- Challenge Box -->
    <div class="review-challenge-box">
      <div class="challenge-icon-large">üí™</div>
      <div class="challenge-content">
        <h3 class="challenge-title">Your Challenge</h3>
        <p class="challenge-description"><%= content[:content][:scenario_narrative] || content[:content][:title] %></p>
      </div>
    </div>

    <!-- Command Input -->
    <div class="review-input-section">
      <div class="terminal-input">
        <span class="terminal-prompt">$</span>
        <input
          type="text"
          class="review-command-input"
          id="reviewCommandInput"
          placeholder="Type the command..."
          autocomplete="off"
          autofocus
        >
      </div>
      <div class="input-hint-text">
        Press <kbd>Enter</kbd> to submit or <kbd>Esc</kbd> to skip
      </div>
    </div>

    <!-- Feedback Area -->
    <div id="reviewFeedback" class="review-feedback-area"></div>

    <!-- Hints Section (hidden by default, shown progressively) -->
    <div class="review-hints" style="display: none;">
      <button class="hint-toggle-btn" id="showHintBtn">
        <span class="hint-icon">üí°</span>
        Need a hint?
      </button>
      <div id="hintContent" class="hint-content" style="display: none;">
        <!-- Hints will be added dynamically based on attempt number -->
      </div>
    </div>

    <!-- Store hints in JavaScript for progressive display -->
    <script type="application/json" id="reviewHintsData">
      <%= raw content[:content][:practice_hints].to_json %>
    </script>

    <!-- Action Buttons -->
    <div class="review-actions">
      <button class="review-submit-btn" id="submitReviewBtn">
        <span class="btn-icon">‚Üí</span>
        Submit Answer
      </button>
    </div>
  </div>
</div>

<style>
/* Overlay */
.review-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.75);
  backdrop-filter: blur(8px);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* Modal */
.review-modal {
  background: white;
  border-radius: 24px;
  max-width: 600px;
  width: 90%;
  max-height: 90vh;
  overflow-y: auto;
  padding: 0;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  animation: slideUp 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(50px) scale(0.95);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

/* Header */
.review-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24px 30px;
  border-bottom: 2px solid #f0f0f0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24px 24px 0 0;
}

.review-badge {
  display: flex;
  align-items: center;
  gap: 12px;
  color: white;
}

.badge-icon {
  font-size: 2rem;
}

.badge-text {
  font-size: 1.5rem;
  font-weight: 800;
}

.skip-button {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2px solid rgba(255, 255, 255, 0.5);
  padding: 10px 20px;
  border-radius: 12px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
}

.skip-button:hover {
  background: rgba(255, 255, 255, 0.3);
  border-color: white;
  transform: translateY(-2px);
}

/* Progress */
.review-progress {
  background: #f8f9fa;
  padding: 12px 30px;
  text-align: center;
  font-weight: 600;
  color: #667eea;
  border-bottom: 1px solid #e9ecef;
}

/* Context Message */
.review-context {
  display: flex;
  gap: 16px;
  padding: 24px 30px;
  background: linear-gradient(135deg, #ffeaa7 0%, #fdcb6e 100%);
  margin: 0;
}

.context-icon {
  font-size: 2rem;
  flex-shrink: 0;
}

.context-message {
  flex: 1;
  color: #2d3436;
}

.context-message strong {
  display: block;
  font-size: 1.1rem;
  margin-bottom: 4px;
}

/* Challenge Box */
.review-challenge-box {
  display: flex;
  gap: 20px;
  padding: 30px;
  align-items: flex-start;
}

.challenge-icon-large {
  font-size: 3rem;
  flex-shrink: 0;
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10px); }
}

.challenge-content {
  flex: 1;
}

.challenge-title {
  font-size: 1.5rem;
  font-weight: 800;
  margin: 0 0 12px 0;
  color: #2d3436;
}

.challenge-description {
  font-size: 1.1rem;
  color: #636e72;
  margin: 0;
  line-height: 1.6;
}

/* Input Section */
.review-input-section {
  padding: 0 30px 24px 30px;
}

.terminal-input {
  display: flex;
  align-items: center;
  background: #2c3e50;
  border-radius: 12px;
  padding: 8px;
  box-shadow: 0 8px 25px rgba(0,0,0,0.15);
  transition: all 0.3s ease;
}

.terminal-input:focus-within {
  box-shadow: 0 8px 35px rgba(102, 126, 234, 0.4);
  transform: translateY(-2px);
}

.terminal-prompt {
  padding: 0 16px;
  font-size: 1.5rem;
  color: #00f2fe;
  font-weight: 700;
  font-family: 'Monaco', 'Courier New', monospace;
}

.review-command-input {
  flex: 1;
  padding: 16px 16px 16px 0;
  font-size: 1.2rem;
  font-family: 'Monaco', 'Courier New', monospace;
  background: transparent;
  border: none;
  color: #00f2fe;
  outline: none;
}

.review-command-input::placeholder {
  color: #7f8c8d;
}

.input-hint-text {
  margin-top: 12px;
  text-align: center;
  font-size: 0.9rem;
  color: #7f8c8d;
}

.input-hint-text kbd {
  display: inline-block;
  padding: 3px 8px;
  background: #f0f0f0;
  border: 1px solid #ccc;
  border-radius: 4px;
  font-family: monospace;
  font-size: 0.85rem;
  box-shadow: 0 2px 0 #999;
}

/* Feedback Area */
.review-feedback-area {
  min-height: 40px;
  margin: 0 30px 20px 30px;
}

.feedback-message {
  padding: 16px 20px;
  border-radius: 12px;
  font-size: 1rem;
  font-weight: 600;
  animation: bounceIn 0.5s ease-out;
}

.feedback-success {
  background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
  color: white;
}

.feedback-error {
  background: linear-gradient(135deg, #ee0979 0%, #ff6a00 100%);
  color: white;
}

/* Hints */
.review-hints {
  padding: 0 30px 24px 30px;
}

.hint-toggle-btn {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 12px 20px;
  background: white;
  border: 2px solid #667eea;
  color: #667eea;
  border-radius: 12px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
}

.hint-toggle-btn:hover {
  background: #667eea;
  color: white;
  transform: translateY(-2px);
}

.hint-content {
  margin-top: 16px;
  animation: slideDown 0.3s ease-out;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.hint-item {
  display: flex;
  gap: 12px;
  padding: 14px 16px;
  background: #f8f9fa;
  border-left: 4px solid #fdcb6e;
  border-radius: 8px;
  margin-bottom: 10px;
  font-size: 0.95rem;
  line-height: 1.5;
}

.hint-number {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 24px;
  height: 24px;
  background: #fdcb6e;
  color: white;
  border-radius: 50%;
  font-weight: 700;
  font-size: 0.85rem;
  flex-shrink: 0;
}

/* Actions */
.review-actions {
  padding: 0 30px 30px 30px;
  display: flex;
  justify-content: center;
}

.review-submit-btn {
  display: inline-flex;
  align-items: center;
  gap: 12px;
  padding: 18px 50px;
  font-size: 1.2rem;
  font-weight: 700;
  color: white;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  border-radius: 50px;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
}

.review-submit-btn:hover {
  transform: translateY(-3px);
  box-shadow: 0 12px 35px rgba(102, 126, 234, 0.5);
}

.review-submit-btn:active {
  transform: translateY(-1px);
}

.btn-icon {
  font-size: 1.5rem;
}

/* Responsive */
@media (max-width: 768px) {
  .review-modal {
    width: 95%;
    max-height: 95vh;
  }

  .review-header {
    padding: 20px;
  }

  .review-challenge-box {
    flex-direction: column;
    text-align: center;
    padding: 24px 20px;
  }

  .challenge-title {
    font-size: 1.3rem;
  }

  .review-input-section,
  .review-hints,
  .review-actions {
    padding-left: 20px;
    padding-right: 20px;
  }
}
</style>

<script>
(function() {
  const overlay = document.getElementById('reviewOverlay');
  const input = document.getElementById('reviewCommandInput');
  const submitBtn = document.getElementById('submitReviewBtn');
  const skipBtn = document.getElementById('skipReviewBtn');
  const showHintBtn = document.getElementById('showHintBtn');
  const hintContent = document.getElementById('hintContent');
  const feedbackArea = document.getElementById('reviewFeedback');

  if (!overlay || !input) return;

  // Progressive mastery tracking
  let attemptNumber = 0;
  let failedAttempts = 0;
  let hintsViewed = 0;
  let sawAnswer = false;
  let startTime = Date.now();

  // Load hints from JSON
  const hintsData = JSON.parse(document.getElementById('reviewHintsData').textContent || '[]');
  const hintsSection = document.querySelector('.review-hints');

  // Focus input immediately
  setTimeout(() => input.focus(), 100);

  // Enter to submit
  input.addEventListener('keypress', function(e) {
    if (e.key === 'Enter' && submitBtn) {
      submitBtn.click();
    }
  });

  // Escape to skip
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && skipBtn) {
      skipBtn.click();
    }
  });

  // Track hints viewed
  if (showHintBtn && hintContent) {
    showHintBtn.addEventListener('click', function() {
      const isHidden = hintContent.style.display === 'none';
      hintContent.style.display = isHidden ? 'block' : 'none';
      showHintBtn.innerHTML = isHidden ? '<span class="hint-icon">üí°</span> Hide hints' : '<span class="hint-icon">üí°</span> Need a hint?';

      if (isHidden) {
        hintsViewed++;
      }
    });
  }

  // Show progressive hint or answer based on attempt number
  function showProgressiveHint(attemptNum) {
    // Get the hint for this attempt (0-indexed: attempt 1 = hint 0)
    const hintIndex = Math.min(attemptNum - 1, hintsData.length - 1);
    const currentHint = hintsData[hintIndex];

    if (attemptNum === 1 && currentHint) {
      // First failure: Show inline hint
      feedbackArea.innerHTML += `
        <div class="hint-message" style="margin-top: 10px; padding: 12px; background: #fff3cd; border-left: 4px solid #ffc107; border-radius: 8px;">
          üí° <strong>Hint:</strong> ${currentHint}
        </div>
      `;
    } else if (attemptNum === 2) {
      // Second failure: Show hint button with current hint
      if (hintsSection && hintContent && showHintBtn) {
        hintsSection.style.display = 'block';
        hintContent.innerHTML = `
          <div class="hint-item">
            <span class="hint-number">1</span>
            ${hintsData[0] || 'Try again!'}
          </div>
          <div class="hint-item" style="background: #fff3cd;">
            <span class="hint-number">2</span>
            ${currentHint || 'Think about the command structure'}
          </div>
        `;
        showHintBtn.style.animation = 'pulse 1s infinite';
        showHintBtn.style.background = '#ffc107';
        showHintBtn.style.color = 'white';
      }
    } else if (attemptNum >= 3) {
      // Third+ failure: Show answer button
      if (hintsSection) {
        hintsSection.style.display = 'block';
        hintContent.innerHTML = hintsData.map((hint, idx) => `
          <div class="hint-item">
            <span class="hint-number">${idx + 1}</span>
            ${hint}
          </div>
        `).join('');
      }

      const showAnswerBtn = document.createElement('button');
      showAnswerBtn.className = 'show-answer-btn';
      showAnswerBtn.innerHTML = 'üìñ Show Answer';
      showAnswerBtn.style.cssText = `
        display: inline-block;
        margin-top: 15px;
        padding: 12px 24px;
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
      `;

      showAnswerBtn.addEventListener('click', function() {
        sawAnswer = true;
        feedbackArea.innerHTML = `
          <div class="answer-reveal" style="padding: 20px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border-radius: 12px; margin: 15px 0;">
            <h4 style="margin: 0 0 10px 0; font-size: 1.2rem;">‚úÖ Correct Answer:</h4>
            <div style="font-family: 'Monaco', monospace; font-size: 1.1rem; background: rgba(0,0,0,0.2); padding: 12px; border-radius: 8px; margin: 10px 0;">
              <%= content[:content][:expected_command] %>
            </div>
            <p style="margin: 10px 0 0 0; font-size: 0.95rem; opacity: 0.9;">
              Type this command above and submit to continue (mastery will be reduced).
            </p>
          </div>
        `;
        this.remove();
        input.focus();
      });

      feedbackArea.appendChild(showAnswerBtn);
    }
  }

  // Submit button
  if (submitBtn) {
    submitBtn.addEventListener('click', function() {
      const command = input.value.trim();
      if (!command) {
        input.focus();
        return;
      }

      attemptNumber++;
      const timeTaken = (Date.now() - startTime) / 1000; // seconds

      // Disable input while processing
      input.disabled = true;
      submitBtn.disabled = true;

      // Send to backend with attempt context
      fetch('<%= @track == "docker" ? docker_learn_respond_path : (@track == "kubernetes" ? kubernetes_learn_respond_path : learn_respond_path) %>', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
        },
        body: JSON.stringify({
          response_type: 'test_answer',
          response: command,
          response_time: timeTaken,
          attempt_context: {
            attempt_number: attemptNumber,
            previous_failures: failedAttempts,
            hints_used: hintsViewed,
            saw_answer: sawAnswer,
            time_taken: timeTaken,
            consecutive_successes: 0  // Will be filled by backend from DB
          }
        })
      })
      .then(res => res.json())
      .then(data => {
        if (data.correct) {
          // Success!
          const boost = data.mastery_boost || 50;
          const newMastery = data.new_mastery || 100;

          feedbackArea.innerHTML = `
            <div class="feedback-message feedback-success">
              ‚úÖ ${data.feedback || 'Correct!'}
              <div style="margin-top: 8px; font-size: 0.9rem;">
                Mastery: ${newMastery}% (+${boost}%)
              </div>
            </div>
          `;

          // Close modal after 1.5 seconds and reload
          setTimeout(() => {
            overlay.style.animation = 'fadeOut 0.3s ease-out';
            setTimeout(() => {
              window.location.reload();
            }, 300);
          }, 1500);
        } else {
          // Error - track failure and show progressive hint
          failedAttempts++;

          feedbackArea.innerHTML = `
            <div class="feedback-message feedback-error">
              ‚ùå ${data.feedback || 'Not quite right.'}
            </div>
          `;

          // Show progressive hint
          showProgressiveHint(attemptNumber);

          input.disabled = false;
          submitBtn.disabled = false;
          input.focus();
          input.select();
        }
      })
      .catch(err => {
        console.error('Review error:', err);
        feedbackArea.innerHTML = `
          <div class="feedback-message feedback-error">
            ‚ö†Ô∏è Something went wrong. Please try again.
          </div>
        `;
        input.disabled = false;
        submitBtn.disabled = false;
      });
    });
  }

  // Skip button
  if (skipBtn) {
    skipBtn.addEventListener('click', function() {
      if (confirm('Skip this review? It will appear again later.')) {
        fetch('<%= @track == "docker" ? docker_learn_respond_path : (@track == "kubernetes" ? kubernetes_learn_respond_path : learn_respond_path) %>', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
          },
          body: JSON.stringify({
            response_type: 'skip_review'
          })
        })
        .then(() => {
          window.location.reload();
        })
        .catch(err => {
          console.error('Skip error:', err);
          window.location.reload();
        });
      }
    });
  }
})();
</script>

<style>
@keyframes fadeOut {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}
</style>
