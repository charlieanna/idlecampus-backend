<script>
(function() {
  const input = document.getElementById('terminalDirectInput');
  const pasteMessage = document.getElementById('pasteMessage');
  if (input) {
    // Block Ctrl+V and Ctrl+C
    input.addEventListener('keydown', function(e) {
      if ((e.ctrlKey || e.metaKey) && (e.key === 'v' || e.key === 'V' || e.key === 'c' || e.key === 'C')) {
        e.preventDefault();
        if ((e.ctrlKey || e.metaKey) && (e.key === 'v' || e.key === 'V')) {
          // Show paste disabled message
          if (pasteMessage) {
            pasteMessage.style.display = 'block';
            pasteMessage.style.opacity = '1';
            pasteMessage.style.transition = 'opacity 0.3s ease';
            setTimeout(() => {
              pasteMessage.style.opacity = '0.5';
            }, 200);
          }
        }
      }
    });
    
    // Block paste event directly
    input.addEventListener('paste', function(e) {
      e.preventDefault();
      if (pasteMessage) {
        pasteMessage.style.display = 'block';
        pasteMessage.style.opacity = '1';
        pasteMessage.style.transition = 'opacity 0.3s ease';
        setTimeout(() => {
          pasteMessage.style.opacity = '0.5';
        }, 200);
      }
    });
    
    // Block cut event
    input.addEventListener('cut', function(e) {
      e.preventDefault();
    });
  }
})();
</script>
