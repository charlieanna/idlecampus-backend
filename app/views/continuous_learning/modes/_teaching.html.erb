<div class="teaching-content">
  <div class="content-header">
    <div class="mode-badge teaching-badge">
      <span class="badge-icon">üìö</span>
      <span class="badge-text">Learning Mode</span>
    </div>
  </div>

  <h2 class="content-title">
    <%= content[:content][:title] %>
  </h2>
  
  <% if content[:metadata][:is_stealth_review] && content[:metadata][:stealth_disguise] %>
    <div class="stealth-intro">
      <div class="stealth-icon">üïµÔ∏è</div>
    <p class="lead"><%= content[:metadata][:stealth_disguise] %></p>
    </div>
  <% else %>
    <div class="explanation-box">
      <%= simple_format(content[:content][:explanation], class: 'explanation-text') %>
    </div>
  <% end %>
  
  <%# Optional: Why this matters %>
  <% if content[:content][:why].present? %>
    <div class="examples-section">
      <h4 class="section-title">
        <span class="title-icon">üéØ</span>
        Why this matters
      </h4>
      <ul>
        <% content[:content][:why].each do |item| %>
          <li><%= item %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%# Optional: Key flags cheat sheet %>
  <% if content[:content][:key_flags].present? %>
    <div class="examples-section">
      <h4 class="section-title">
        <span class="title-icon">üß©</span>
        Key flags
      </h4>
      <% content[:content][:key_flags].each do |flag, meaning| %>
        <div class="example-card">
          <div class="command-box">
            <code><%= flag %></code>
          </div>
          <div class="stat-info" style="color:#2c3e50"><%= meaning %></div>
        </div>
      <% end %>
    </div>
  <% end %>
  
  <%# Optional: Common mistakes %>
  <% if content[:content][:common_mistakes].present? %>
    <div class="examples-section">
      <h4 class="section-title">
        <span class="title-icon">‚ö†Ô∏è</span>
        Common mistakes
      </h4>
      <ul>
        <% content[:content][:common_mistakes].each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%# Optional: Exam tip %>
  <% if content[:content][:exam_tip].present? %>
    <div class="examples-section">
      <h4 class="section-title">
        <span class="title-icon">üìù</span>
        Exam tip
      </h4>
      <div class="example-card">
        <div class="stat-info" style="color:#2c3e50"><%= content[:content][:exam_tip] %></div>
      </div>
    </div>
  <% end %>
  
  <% if content[:content][:examples].present? %>
    <div class="examples-section">
      <h4 class="section-title">
        <span class="title-icon">üí°</span>
        Examples
      </h4>
      <div class="examples-grid">
        <% content[:content][:examples].each_with_index do |example, index| %>
          <div class="example-card" style="animation-delay: <%= index * 0.1 %>s">
            <div class="example-number"><%= index + 1 %></div>
            <div class="command-box">
        <code><%= example %></code>
            </div>
            <button class="copy-btn" onclick="copyToClipboard('<%= example %>')">
              <span class="copy-icon">üìã</span>
            </button>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
  
  <% if content[:content][:command_to_learn].present? %>
    <div class="key-concept-section">
      <div class="concept-header">
        <span class="concept-icon">‚≠ê</span>
        <h4>Key Command</h4>
      </div>
      <div class="command-spotlight">
        <code class="spotlight-command"><%= content[:content][:command_to_learn] %></code>
        <button class="copy-btn-large" onclick="copyToClipboard('<%= content[:content][:command_to_learn] %>')">
          Copy
        </button>
      </div>
    </div>
  <% end %>
  
  <div class="action-section">
    <button class="action-button pulse-btn" id="understoodBtn" data-action="understanding_confirmed">
      <span class="btn-icon">‚úì</span>
      I understand, let's practice!
      <span class="btn-arrow">‚Üí</span>
  </button>
  </div>
</div>

<style>
.teaching-content {
  animation: fadeInContent 0.5s ease-out;
}

@keyframes fadeInContent {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}

.content-header {
  margin-bottom: 25px;
}

.mode-badge {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 10px 20px;
  border-radius: 25px;
  font-weight: 600;
  font-size: 0.9rem;
}

.teaching-badge {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
}

.badge-icon {
  font-size: 1.2rem;
}

.content-title {
  font-size: 2rem;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 25px;
  line-height: 1.3;
}

.stealth-intro {
  display: flex;
  gap: 15px;
  padding: 25px;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  border-radius: 15px;
  color: white;
  margin-bottom: 25px;
}

.stealth-icon {
  font-size: 2.5rem;
}

.explanation-box {
  padding: 30px;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  border-radius: 15px;
  margin-bottom: 30px;
  border-left: 5px solid #667eea;
}

.explanation-text {
  font-size: 1.1rem;
  line-height: 1.7;
  color: #34495e;
  margin: 0;
}

.examples-section {
  margin: 35px 0;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 10px;
  font-size: 1.3rem;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 20px;
}

.title-icon {
  font-size: 1.5rem;
}

.examples-grid {
  display: grid;
  gap: 15px;
}

.example-card {
  display: flex;
  align-items: center;
  gap: 15px;
  padding: 20px;
  background: white;
  border: 2px solid #e8e8e8;
  border-radius: 12px;
  transition: all 0.3s ease;
  animation: slideInExample 0.5s ease-out both;
}

@keyframes slideInExample {
  from {
    opacity: 0;
    transform: translateX(-20px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.example-card:hover {
  border-color: #667eea;
  box-shadow: 0 4px 15px rgba(102, 126, 234, 0.2);
  transform: translateX(5px);
}

.example-number {
  width: 35px;
  height: 35px;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  flex-shrink: 0;
}

.command-box {
  flex: 1;
  padding: 12px 18px;
  background: #2c3e50;
  border-radius: 8px;
  overflow-x: auto;
}

.command-box code {
  color: #00f2fe;
  font-family: 'Monaco', 'Courier New', monospace;
  font-size: 0.95rem;
  white-space: nowrap;
}

.copy-btn {
  padding: 8px 12px;
  background: transparent;
  border: 2px solid #e8e8e8;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-size: 1.2rem;
}

.copy-btn:hover {
  background: #667eea;
  border-color: #667eea;
  transform: scale(1.1);
}

.key-concept-section {
  margin: 35px 0;
  padding: 30px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 15px;
  color: white;
}

.concept-header {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-bottom: 20px;
}

.concept-icon {
  font-size: 2rem;
  animation: sparkle 2s infinite;
}

@keyframes sparkle {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.2); }
}

.concept-header h4 {
  font-size: 1.4rem;
  font-weight: 700;
  margin: 0;
}

.command-spotlight {
  display: flex;
  align-items: center;
  gap: 15px;
  padding: 20px;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 12px;
  backdrop-filter: blur(10px);
}

.spotlight-command {
  flex: 1;
  font-size: 1.3rem;
  font-weight: 600;
  color: white;
  font-family: 'Monaco', 'Courier New', monospace;
}

.copy-btn-large {
  padding: 12px 24px;
  background: white;
  color: #667eea;
  border: none;
  border-radius: 8px;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.3s ease;
  font-size: 0.95rem;
}

.copy-btn-large:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
}

.action-section {
  margin-top: 40px;
  text-align: center;
}

.action-button {
  display: inline-flex;
  align-items: center;
  gap: 12px;
  padding: 18px 40px;
  font-size: 1.1rem;
  font-weight: 700;
  color: white;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  border-radius: 50px;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
}

.action-button:hover {
  transform: translateY(-3px);
  box-shadow: 0 12px 35px rgba(102, 126, 234, 0.5);
}

.pulse-btn {
  animation: pulseButton 2s infinite;
}

@keyframes pulseButton {
  0%, 100% { box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4); }
  50% { box-shadow: 0 8px 35px rgba(102, 126, 234, 0.6); }
}

.btn-icon {
  font-size: 1.3rem;
}

.btn-arrow {
  font-size: 1.2rem;
  transition: transform 0.3s ease;
}

.action-button:hover .btn-arrow {
  transform: translateX(5px);
}
</style>

<script>
function copyToClipboard(text) {
  navigator.clipboard.writeText(text).then(() => {
    // Show temporary success message
    const btn = event.target.closest('button');
    const originalContent = btn.innerHTML;
    btn.innerHTML = '‚úì Copied!';
    btn.style.background = '#4CAF50';
    setTimeout(() => {
      btn.innerHTML = originalContent;
      btn.style.background = '';
    }, 2000);
  });
}
</script>
