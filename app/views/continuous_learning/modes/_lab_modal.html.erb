<script>
(function() {
  const input = document.getElementById('terminalDirectInput');
  const terminal = document.getElementById('labTerminal');
  const skipBtn = document.getElementById('skipLabBtn');

  // Skip button handler
  if (skipBtn) {
    skipBtn.addEventListener('click', function() {
      if (confirm('Skip this lab? Your progress will be saved.')) {
        window.location.href = '/docker/learn';
      }
    });
  }

  // ESC key to skip
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
      if (confirm('Skip this lab?')) {
        window.location.href = '/docker/learn';
      }
    }
  });

  if (input && terminal) {
    // Handle Enter key - execute command
    input.addEventListener('keypress', function(e) {
      if (e.key === 'Enter') {
        const command = this.value.trim();
        if (command) {
          addToTerminal(command);
          executeCommand(command);
          this.value = '';
        }
      }
    });

    // Click terminal to focus input
    terminal.addEventListener('click', function() {
      input.focus();
    });

    // Focus input when modal loads
    setTimeout(() => input.focus(), 300);
  }

  function addToTerminal(command) {
    const output = terminal.querySelector('.terminal-output');
    const historyLine = document.createElement('div');
    historyLine.className = 'command-history';
    historyLine.innerHTML = `<span class="prompt">root@docker:~$</span> <span class="cmd">${command}</span>`;
    output.appendChild(historyLine);

    // Scroll to bottom
    terminal.scrollTop = terminal.scrollHeight;
  }

  function executeCommand(command) {
    // Execute via backend
    fetch('/docker/learn/execute', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
      },
      body: JSON.stringify({ command: command })
    })
    .then(r => r.json())
    .then(result => {
      if (result.output) {
        window.addTerminalOutput(result.output, 'output');
      }
      const fb = document.getElementById('labFeedback');
      if (fb && result.feedback) {
        fb.innerHTML = `<div class="feedback-message ${result.correct ? 'command-success' : 'command-error'}">${result.feedback}</div>`;
      }
      // Advance through lab steps
      if (result.advance_to_next_step) {
        const box = document.querySelector('.current-step-box .current-instruction');
        const count = document.querySelector('.current-step-box .step-count');
        if (box && result.next_instruction) box.textContent = result.next_instruction;
        if (count && result.step_position) count.textContent = `(${result.step_position})`;
      }
      if (result.lab_complete) {
        setTimeout(() => { window.location.href = '/docker/learn'; }, 1500);
      }
    })
    .catch(() => {
      const fb = document.getElementById('labFeedback');
      if (fb) fb.innerHTML = `<div class='command-error'>Network error. Try again.</div>`;
    });
  }

  // Add terminal output helper
  window.addTerminalOutput = function(text, type = 'output') {
    const output = terminal.querySelector('.terminal-output');
    const outputLine = document.createElement('div');
    outputLine.className = `command-${type}`;
    outputLine.textContent = text;
    output.appendChild(outputLine);
    terminal.scrollTop = terminal.scrollHeight;
  };
})();
</script>
